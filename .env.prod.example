# Production Environment Variables Example
# Rename to .env.prod and fill in values

# Backend
FRONTEND_URL=https://tangger.ohmaishoot.com
THREADS_REDIRECT_URI=https://tangger.ohmaishoot.com/api/auth/threads/callback
THREADS_CLIENT_ID=your_threads_app_id
THREADS_CLIENT_SECRET=your_threads_app_secret
THREADS_SCOPES=threads_basic,threads_content_publish,threads_delete,threads_read_replies,threads_manage_replies,threads_manage_insights
LOG_LEVEL=INFO

# Note: DATABASE_URL is hardcoded in docker-compose to use the mounted volume
# DATABASE_URL=sqlite:///../storage/app.db
DATABASE_URL=sqlite:////app/storage/app.db
