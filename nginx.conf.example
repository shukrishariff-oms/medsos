server {
    listen 80;
    server_name tangger.ohmaishoot.com;

    # Redirect HTTP to HTTPS (uncomment after Certbot)
    # return 301 https://$host$request_uri;

    location / {
        root /var/www/threados/frontend/dist;
        index index.html;
        try_files $uri $uri/ /index.html;
    }

    location /api/ {
        # Proxy to backend (Uvicorn)
        proxy_pass http://127.0.0.1:8001/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Remove /api prefix when forwarding to backend if backend doesn't expect it
        # But our backend expects root /auth, /threads etc.
        # So we use trailing slash in proxy_pass to strip /api
    }
}
